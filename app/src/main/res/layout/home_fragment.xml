<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.airlines.HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp" android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.button.MaterialButton
            android:text="Book Your Flight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/bookflightButton" android:textSize="20dp"/>
        <com.google.android.material.button.MaterialButton
            android:text="See Available Flights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/seeflightButton"
            android:textSize="20dp"/>
        <com.google.android.material.button.MaterialButton
            android:text="Check-In"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/checkinButton" android:textSize="20dp"/>
        <com.google.android.material.button.MaterialButton
            android:text="Ratings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ratingsButton" android:textSize="20dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
